{
    "name": "@effect-app-boilerplate/root",
    "private": true,
    "pnpm": {
        "patchedDependencies": {
            "@effect/language-service@0.0.17": "patches/@effect__language-service@0.0.17.patch",
            "@playwright/test@1.30.0": "patches/@playwright+test+1.30.0.patch",
            "@typescript-eslint/scope-manager@5.49.0": "patches/@typescript-eslint__scope-manager@5.49.0.patch",
            "eslint-plugin-codegen@0.17.0": "patches/eslint-plugin-codegen@0.17.0.patch",
            "eslint-plugin-unused-imports@2.0.0": "patches/eslint-plugin-unused-imports@2.0.0.patch",
            "typescript@5.0.0-tsplus.20230113": "patches/typescript@5.0.0-tsplus.20230113.patch",
            "@phaphoso/eslint-plugin-dprint@0.5.2": "patches/@phaphoso__eslint-plugin-dprint@0.5.2.patch"
        }
    },
    "scripts": {
        "all": "pnpm -r --filter \"!./play\" --filter \"!./libs/**/*\"",
        "preinstall": "npx only-allow pnpm",
        "clean": "pnpm all clean",
        "clean-dist": "pnpm all clean-dist",
        "upgrade": "echo hi",
        "scan": "pnpm esw -w --fix _boilerplate/api-api/_src/Usecases.ts _boilerplate/resources/_src/Resources.ts _boilerplate/resources/_src/Resources/*.ts",
        "autofix": "NODE_OPTIONS=--max-old-space-size=6144 pnpm all autofix",
        "lint": "pnpm all lint",
        "circular:dist": "pnpm all circular:dist",
        "start": "concurrently -k -p \"[{name}]\" -n \"API,Frontend\" -c \"cyan.bold,green.bold,blue.bold\" \"pnpm start:api\" \"pnpm start:frontend\"",
        "start:api": "cd _boilerplate/api && pnpm start",
        "start:frontend": "cd _boilerplate/frontend-nuxt && pnpm start",
        "dev": "pnpm build:e2e && concurrently -k -p \"[{name}]\" -n \"Watch,API,Frontend\" -c \"yellow.bold,cyan.bold,green.bold\" \"pnpm watch\" \"pnpm dev:api\" \"pnpm dev:frontend\"",
        "online-dev": "cd _boilerplate/frontend-nuxt && pnpm online-dev",
        "dev:api": "cd _boilerplate/api && pnpm dev",
        "dev:frontend": "cd _boilerplate/frontend-nuxt && pnpm dev",
        "build-apps": "cd _boilerplate/api && pnpm build && cd ../frontend && pnpm build",
        "test": "pnpm all test",
        "testsuite": "pnpm all testsuite",
        "up-all": "pnpm --recursive update",
        "up-ncu": "pnpm run update && pnpm i",
        "update": "ncu -u && pnpm -r ncu -u",
        "ncu": "ncu",
        "build-libs": "cd libs && cd _boilerplate/core && pnpm build && cd ../.. && pnpm build",
        "lint:watch": "ESLINT_TS=1 esw -w --changed --clear --ext ts,tsx",
        "apps": "pnpm all --workspace-concurrency 1 --filter !./_boilerplate/messages --filter !./_boilerplate/resources --filter !./_boilerplate/models --filter !./_boilerplate/ui",
        "api": "pnpm all --workspace-concurrency 1 --filter \"./_boilerplate/api*\"",
        "packages": "pnpm all --workspace-concurrency 1 --filter ./_boilerplate/messages --filter ./_boilerplate/resources --filter ./_boilerplate/models --filter ./_boilerplate/ui",
        "libs": "pnpm all --workspace-concurrency 1 --filter \"@effect-app/*\"",
        "circular-api": "pnpm api circular",
        "circular-packages": "pnpm packages circular",
        "lint-api": "pnpm api lint",
        "lint-packages": "pnpm packages lint",
        "test-packages": "pnpm packages test:run",
        "testsuite-packages-manual": "cd _boilerplate/models && pnpm testsuite && cd ../resources && pnpm testsuite && cd ../messages && pnpm testsuite",
        "watch-packages": "pnpm packages build && pnpm packages watch",
        "build": "NODE_OPTIONS=--max-old-space-size=6144 tsc --build ./tsconfig.all.json",
        "build-prod": "pnpm packages build && pnpm build-frontend-prod",
        "build-frontend-prod": "cd _boilerplate/frontend-nuxt && pnpm build",
        "build-e2e": "cd _boilerplate/api && pnpm e2e:build",
        "rebuild": "pnpm all clean && pnpm -r build",
        "nnm": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && pnpm i"
    },
    "resolutions": {
        "@types/node": "~18.11.11",
        "@types/react": "^18.0.26",
        "http-proxy": "npm:http-proxy-node16@1.0.0"
    },
    "dependencies": {
        "@types/react": "^18.0.27",
        "cross-env": "^7.0.3",
        "fast-check": "^3.6.2",
        "patch-package": "^6.5.1",
        "ts-node": "^10.9.1",
        "vite-node": "^0.28.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.20.7",
        "@dprint/typescript": "^0.80.2",
        "@effect-app/eslint-codegen-model": "^0.8.2",
        "@effect-app/prelude": "^0.12.1",
        "@effect-app/core": "^0.12.1",
        "@effect-app/compiler": "^0.7.3",
        "@effect/language-service": "^0.0.17",
        "@phaphoso/eslint-plugin-dprint": "^0.5.2",
        "@tsconfig/strictest": "^1.0.2",
        "@tsplus/installer": "0.0.164",
        "@types/lodash": "^4.14.191",
        "@types/node": "~18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "@typescript-eslint/scope-manager": "^5.49.0",
        "babel-plugin-replace-import-extension": "^1.1.3",
        "concurrently": "^7.6.0",
        "dprint": "^0.34.4",
        "enhanced-resolve": "^5.12.0",
        "eslint": "^8.32.0",
        "eslint-import-resolver-typescript": "^3.5.3",
        "eslint-import-resolver-webpack": "^0.13.2",
        "eslint-plugin-codegen": "^0.17.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier-vue": "^4.2.0",
        "eslint-plugin-simple-import-sort": "^9.0.0",
        "eslint-plugin-sort-destructure-keys": "^1.4.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "eslint-watch": "^8.0.0",
        "madge": "^5.0.1",
        "nodemon": "^2.0.20",
        "npm-check-updates": "^16.6.3",
        "prebuild-install": "^7.1.1",
        "ts-toolbelt": "^9.6.0",
        "ts-transform-paths": "^3.0.0",
        "tsc-watch": "^6.0.0",
        "tsconfig-paths": "^4.1.2",
        "typescript": "https://cdn.jsdelivr.net/npm/@tsplus/installer@0.0.164/compiler/typescript.tgz",
        "typescript-transform-paths": "^3.4.6",
        "vite": "^4.0.4",
        "vitest": "^0.28.2"
    }
}