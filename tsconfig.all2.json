{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "paths": {
      "api/*": [
        "./api/_src/*"
      ],
      // "core/*": [
      //   "./core/_src/*"
      // ]
    },
  },
  "include": [
    "api/_src/**/*",
    "api/_migrator/_src/**/*",
    "api/_test/**/*",
    //"e2e/**/*",
    //"frontend/**/*",
  ],
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/lib",
    "**/dist",
    "**/.*"
  ],
  "references": [
    {
      "path": "./api"
    }
  ]
}