{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "paths": {
      "api/*": [
        "./_project/api/_src/*"
      ],
      // "core/*": [
      //   "./_project/core/_src/*"
      // ]
    },
  },
  "include": [
    "_project/api/_src/**/*",
    "_project/api/_migrator/_src/**/*",
    "_project/api/_test/**/*",
    //"_project/e2e/**/*",
    //"_project/frontend/**/*",
  ],
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/lib",
    "**/dist",
    "**/.*"
  ],
  "references": [
    {
      "path": "./_project/api"
    }
  ]
}