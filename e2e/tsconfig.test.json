{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "noEmit": true,
    "lib": [
      "es5",
      "dom"
    ],
    "paths": {
      // "@effect-app-boilerplate/resources/*": [
      //   "../_boilerplate/resources/_src/*"
      // ],
      // "@effect-app-boilerplate/types/*": [
      //   "../_boilerplate/types/_src/*"
      // ],
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      // Transform paths in output .js files
      {
        "transform": "ts-transform-paths"
      },
      // Transform paths in output .d.ts files (Include this line if you output declarations files)
      {
        "transform": "ts-transform-paths",
        "afterDeclarations": true
      },
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/.*"
  ],
  "references": [
    {
      "path": "../_boilerplate/types"
    },
    {
      "path": "../_boilerplate/resources"
    },
  ]
}