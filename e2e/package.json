{
  "name": "@effect-app-boilerplate/e2e",
  "version": "1.0.0",
  "license": "NONE",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:watch": "playwright-watch test",
    "build": "tsc --build",
    "lint": "NODE_OPTIONS=--max-old-space-size=8192 ESLINT_TS=1 eslint .",
    "lint:watch": "ESLINT_TS=1 esw -w --changed --clear --ext ts,tsx .",
    "autofix": "pnpm lint --fix",
    "up": "pnpm run update && pnpm exec-update",
    "update": "pnpm ncu -u",
    "exec-update": "pnpm i",
    "clean": "rm -rf test-out",
    "ncu": "ncu",
    "watch": "pnpm build --watch"
  },
  "devDependencies": {
    "@playwright/test": "~1.55.1",
    "@types/node": "~24.6.0",
    "date-fns": "^4.1.0",
    "npm-check-updates": "^19.0.0",
    "playwright-core": "^1.55.1",
    "playwright-watch": "^1.3.23",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2"
  },
  "dependencies": {
    "@effect-app-boilerplate/api": "workspace:*",
    "@effect/platform-node": "0.98.0",
    "effect-app": "^3.11.0",
    "@effect/platform": "^0.92.0",
    "effect": "^3.18.0",
    "cross-fetch": "^4.1.0",
    "eslint": "^9.36.0",
    "dprint": "^0.50.2"
  }
}