{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "Node16"
  },
  "include": [
    "_project/resources/_src/**/*",
    "_project/models/_src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/lib",
    "**/dist",
    "**/.*"
  ],
  "references": [
    {
      "path": "./_project/resources"
    },
    {
      "path": "./_project/models"
    }
  ]
}