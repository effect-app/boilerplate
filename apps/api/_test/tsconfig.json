{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "tsPlusConfig": "../../../tsplus.config.json",
        "tsPlusTypes": [
            "../node_modules/@effect-ts-app/core/vendor/effect-ts-tsplus.json",
            "../node_modules/@effect-ts-app/core/vendor/effect-io-tsplus.json",
            "../node_modules/@effect-ts-app/core/vendor/effect-stm-tsplus.json",
            "../node_modules/@effect-ts-app/core/vendor/fp-ts-data-tsplus.json"
        ],
        "esModuleInterop": true,
        "importsNotUsedAsValues": "preserve",
        "baseUrl": "./",
        "rootDir": "_src",
        // keep in here, cause madge can't detect it from extended tsconfig
        "moduleResolution": "Node16",
        "paths": {
            // this will point to the wrong folder at runtime, (dist/../api)
            // but jest config works around it for tests.
            "@/*": [
                "../_src/*"
            ]
        },
        "outDir": "./dist",
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
    },
    "include": [
        "./_src/**/*.ts"
    ],
    "exclude": [
        "./dist",
        "node_modules",
        "build",
        "lib",
        "dist",
        "**/*.d.ts.map",
        "**/.*"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "references": [
        {
            "path": ".."
        },
        {
            "path": "../../api-api"
        },
        {
            "path": "../../../packages/messages"
        },
        {
            "path": "../../../packages/client"
        },
        {
            "path": "../../../packages/types"
        },
    ]
}