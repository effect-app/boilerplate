{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Clean Dist",
			"type": "shell",
			"command": "pnpm clean-dist",
			"group": "build"
		},
		{
			"label": "Watch API & Packages",
			"type": "shell",
			"command": "pnpm build -w",
			// "options": {
			// 	"cwd": "apps/api/_test",
			// },
			"dependsOn": [
				//"Scan Resources",
				"Clean Dist"
			],
			"group": {
				"kind": "build",
			},
			"isBackground": true,
			"presentation": {
				"group": "watch-build",
			},
			"problemMatcher": [
				{
					"base": "$tsc-watch",
					"fileLocation": [
						"relative",
						"${workspaceRoot}",
					],
				}
			]
		},
		{
			"label": "Watch Libs",
			"type": "shell",
			"command": "pnpm build-libs -w",
			// "options": {
			// 	"cwd": "apps/api/_test",
			// },
			"dependsOn": [
				//"Scan Resources",
				"Clean Dist"
			],
			"group": {
				"kind": "build",
			},
			"isBackground": true,
			"presentation": {
				"group": "watch-build",
			},
			"problemMatcher": [
				{
					"base": "$tsc-watch",
					"fileLocation": [
						"relative",
						"${workspaceRoot}/libs",
					],
				}
			]
		},
		{
			"label": "Watch E2E",
			"type": "shell",
			"command": "pnpm watch",
			"options": {
				"cwd": "e2e"
			},
			"dependsOn": [
				"Watch API & Packages"
			],
			"group": "build",
			"isBackground": true,
			"presentation": {
				"group": "watch-build"
			},
			"problemMatcher": [
				{
					"base": "$tsc-watch",
					"fileLocation": [
						"relative",
						"${workspaceRoot}/e2e",
					],
				}
			]
		},
		{
			"label": "Watch Frontend",
			"type": "shell",
			"command": "pnpm compile -w",
			"options": {
				"cwd": "apps/frontend-nuxt"
			},
			"dependsOn": [
				"Watch E2E"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"presentation": {
				"group": "watch-build"
			},
			"problemMatcher": [
				{
					"base": "$tsc-watch",
					"fileLocation": [
						"relative",
						"${workspaceRoot}/apps/frontend-nuxt",
					],
				}
			]
		},
		{
			"label": "Run API",
			"type": "shell",
			"command": "pnpm dev",
			"options": {
				"cwd": "apps/api"
			},
			"isBackground": true,
			// FAKE... but works..
			"problemMatcher": {
				"severity": "warning",
				"pattern": [
					{
						"regexp": "^\\s+(.*)\\((\\d+),(\\d+)\\):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"message": 4
					}
				],
				"background": {
					"beginsPattern": "starting",
					"endsPattern": "Running on",
				}
			},
			"presentation": {
				"group": "run"
			}
		},
		{
			"label": "Run UI",
			"type": "shell",
			"command": "pnpm dev -o",
			"options": {
				"cwd": "apps/frontend-nuxt"
			},
			"dependsOrder": "sequence",
			"dependsOn": [
				//				"Clean",
				// "API Watch",
				// "UI Watch",
				"Run API",
			],
			"isBackground": true,
			// FAKE...
			"problemMatcher": {
				"severity": "warning",
				"pattern": [
					{
						"regexp": "^\\s+(.*)\\((\\d+),(\\d+)\\):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"message": 4
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "compiling",
					"endsPattern": "compiled successfully",
				}
			},
			"presentation": {
				"group": "run"
			}
		},
		{
			"label": "API-E2E",
			"type": "shell",
			"command": "pnpm run test --watch",
			"options": {
				"cwd": "apps/api/_test"
			},
			"group": "test",
			"isBackground": true,
			// FAKE... but works..
			"problemMatcher": {
				"severity": "warning",
				"pattern": [
					{
						"regexp": "^\\s+(.*)\\((\\d+),(\\d+)\\):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"message": 4
					}
				],
				"background": {
					"beginsPattern": "starting",
					"endsPattern": "Running on",
				}
			},
			"presentation": {
				"group": "test"
			}
		},
		{
			"label": "E2E",
			"type": "shell",
			"command": "pnpm run test",
			"options": {
				"cwd": "e2e"
			},
			"group": "test",
			"isBackground": true,
			// FAKE... but works..
			"problemMatcher": {
				"severity": "warning",
				"pattern": [
					{
						"regexp": "^\\s+(.*)\\((\\d+),(\\d+)\\):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"message": 4
					}
				],
				"background": {
					"beginsPattern": "starting",
					"endsPattern": "Running on",
				}
			},
			"presentation": {
				"group": "run"
			}
		},
		{
			"label": "UI Build Prod",
			"type": "shell",
			"command": "pnpm build",
			"options": {
				"cwd": "apps/frontend-nuxt"
			},
			"group": "build",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Types Build",
				"Client Build"
			],
			"problemMatcher": []
		}
	]
}